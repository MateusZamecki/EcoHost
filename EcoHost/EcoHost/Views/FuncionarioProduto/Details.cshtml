@model EcoHost.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Informações do produto</h1>

<div>
    <hr />
    <div class="card">
        <div class="card-header">Produto</div>
        <div class="card-body row">
            <div class="form-group col-md">
                <label>Nome</label>
                <input disabled class="form-control" value="@Html.DisplayFor(model => model.Nome)" />
            </div>
        </div>
        <div class="card">
            <div class="card-header">Informações da Compra</div>
            <div class="card-body row">
                <div class="form-group col-md">
                    <label>ValorVenda</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.ValorVenda)" />
                </div>
                <div class="form-group col-md">
                    <label>ValorCompra</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.CustoCompra)" />
                </div>
                <div class="form-group col-md">
                    <label>Quantidade</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.Quantidade)" />
                </div>
                <div class="form-group col-md">
                    <label>DataCompra</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.DataCriacao)" />
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Informações de Setor</div>
            <div class="card-body row">
                <div class="form-group col-md">
                    <label>Categoria</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.Categoria.Nome)" />
                </div>
                <div class="form-group col-md">
                    <label>Fornecedor</label>
                    <input disabled class="form-control" value="@Html.DisplayFor(model => model.Fornecedor.Nome)" />
                </div>
            </div>
        </div>
    </div>
</div>
    <br />
        <div>
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar produto</a>
            <a class="btn btn-primary" asp-action="Principal">Voltar</a>
        </div>
