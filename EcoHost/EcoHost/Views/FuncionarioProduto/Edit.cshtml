@model EcoHost.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar Informações do Produto</h1>
<br />
<hr />
<div>
    <a class="btn btn-outline-primary" asp-action="Principal">Voltar</a>
</div>
<hr />
<br />
<div class="card">
    <div class="card-header">Produto</div>
    <div class="card-body row">
        <div class="col-md">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="card">
                    <div class="card-header">Informações da Compra</div>
                    <div class="card-body row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="ValorVenda" class="control-label"></label>
                                <input type="text" asp-for="ValorVenda" placeholder="0.00" class="form-control" min="0" step="0.01"  />
                                <i>Sempre coloque dois números depois do ponto (0.00)</i>
                                <span asp-validation-for="ValorVenda" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustoCompra" class="control-label"></label>
                                <input type="text" asp-for="CustoCompra" placeholder="0.00" class="form-control" min="0" step="0.01" />
                                <i>Sempre coloque dois números depois do ponto (0.00)</i>
                                <span asp-validation-for="CustoCompra" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="Quantidade" class="control-label"></label>
                                <input asp-for="Quantidade" class="form-control" />
                                <span asp-validation-for="Quantidade" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataCriacao" class="control-label"></label>
                                <input asp-for="DataCriacao" class="form-control" />
                                <span asp-validation-for="DataCriacao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="card-header">Informações de Setor</div>
                    <div class="card-body row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="CategoriaId" class="control-label"></label>
                                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" name="CategoriaId"></select>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="FornecedorId" class="control-label"></label>
                                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId" name="FornecedorId"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
